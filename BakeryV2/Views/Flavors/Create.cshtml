@{
  Layout = "_Layout";
}

@model BakeryV2.Models.Flavor

<h4>Add a New Flavor</h4>
<hr />

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>


@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  <input type="submit" value="Add New Flavor" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show All Flavors", "Index")</p>