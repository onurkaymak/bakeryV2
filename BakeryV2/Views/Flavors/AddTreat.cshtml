@{
  Layout = "_Layout";
}

@model BakeryV2.Models.Flavor

<h2>Add Treat</h2>
<hr />

<h4>Add treat to this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Flavor List", "Index")</p>